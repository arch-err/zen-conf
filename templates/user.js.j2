// Zen Browser User Preferences
// Generated by browser-conf
// This file is automatically loaded on Firefox/Zen startup

// ============================================================================
// Standard Firefox Preferences
// ============================================================================
{% for key, value in preferences.items() %}
user_pref("{{ key }}", {{ value|tojson }});
{% endfor %}

// ============================================================================
// Zen-Specific Preferences
// ============================================================================
{% for key, value in zen_preferences.items() %}
user_pref("zen.{{ key }}", {{ value|tojson }});
{% endfor %}

// ============================================================================
// Container Preferences
// ============================================================================
// Containers are managed via containers.json and Multi-Account Containers extension

// ============================================================================
// Toolbar Customization
// ============================================================================
{% if toolbar_state %}
// Toolbar layout and button positions
user_pref("browser.uiCustomization.state", {{ toolbar_state|tojson }});
{% endif %}

// ============================================================================
// Workspace Preferences
// ============================================================================
{% if workspaces %}
// Workspace configuration
// Note: These preference keys may need verification/adjustment
{% for workspace in workspaces %}
// Workspace: {{ workspace.name }}
{% endfor %}
{% endif %}
